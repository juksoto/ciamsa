/** 
*Functions 
*/
	

/** Create styles for the buttons **/
createBtnColor(bgColor1, bgColor2, colorFont1, colorFont2)
	background-color bgColor1
	color colorFont1 
	&:hover
		background-color bgColor2
		color colorFont2 

/** Create styles for the alerts **/
createAlerts(bgColor, borderColor, colorFont, colorLink)
	background-color bgColor
	border borderColor
	color colorFont
	padding 0.5em 
	a
		color colorLink
		&:hover
			color colorFont
			text-decoration underline

createIconColor(colorIcon)
	color colorIcon
	
/**
* Tags 
*/

body
	sansNarrow()
	font-size 16px
	color colorGrayCiamsa
footer 
	background colorCiamsa
	bottom 0
	color white
	padding-top 0.6em

h1
	font-weight 500
	font-size 2.2em
	line-height 0.9
	margin-top -0.5em
	span 
		display block
		font-size 1.4em
		font-weight 600
	.small
		color colorGrayCiamsa
		font-size 0.8em
		font-weight 500
		margin-top 0.1em
h3
	sansNarrow()		
nav 
	padding-top 1em

	
/****
 * Alerts
 */
 
.successful
 	createAlerts(colorGrass1, colorGrass2, colorGrass2, white)
	
.notice
	createAlerts(colorSunFlower1, colorSunFlower2, colorSunFlower3, white )

.danger
	createAlerts(colorGrapeFruit1, colorGrapeFruit2, white, white )

.info
	createAlerts(colorAqua1, colorAqua2, colorAqua2, white )
	
.alert-floating
	display none
	left 50%
	margin-left -10em
	position absolute
	right 0
	text-align center
	top 3em
	width 20em
	z-index 9999
		
/****
 * Buttons
 */
.button
	font-size 1em
	font-weight bold
	border-radius 1em
	padding 0.4em 1em
	
.btn-ciamsa
	createBtnColor(colorCiamsa2,colorCiamsa1, white, white )

.btn-grapefruit
	createBtnColor(colorGrapeFruit1,colorGrapeFruit2, white, white )

.btn-sunflower
	createBtnColor(colorSunFlower2,colorSunFlower3, white, white )

.btn-aqua
	createBtnColor(colorAqua1,colorAqua2, white, white )
	
