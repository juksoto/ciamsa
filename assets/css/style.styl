/** 
* Custom Queries 
**/

/* Small Only */
@media screen and (max-width: 39.9375em)
	.wrapper-step-one
		.content
			margin-top 2em
	.logo
		width 250px


/**
* Align tipography responsive
*/

/* Small only */
@media screen and (max-width: 39.9375em)
	.text-small-only-left  
		text-align left 
	.text-small-only-right  
		text-align right 
	.text-small-only-center  
		text-align center 
	.text-small-only-justify  
		text-align justify 

/* Medium and up */
@media screen and (min-width: 40em)
	.text-medium-left  
		text-align left 
	.text-medium-right  
		text-align right 
	.text-medium-center  
		text-align center 
	.text-medium-justify  
		text-align justify 

/* Medium only */
@media screen and (min-width: 40em) and (max-width: 63.9375em) 
	.text-medium-only-left  
		text-align left 
	.text-medium-only-right  
		text-align right 
	.text-medium-only-center  
		text-align center 
	.text-medium-only-justify  
		text-align justify 

/* Large and up */
@media screen and (min-width: 64em)
	.text-large-left  
		text-align left 
	.text-large-right  
		text-align right 
	.text-large-center  
		text-align center 
	.text-large-justify  
