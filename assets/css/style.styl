/**
* Animate APP
**/
.wrapper-step
	.list-logo	
		display none
	.header-image
		h1
			opacity 0
			margin-top -10px
		img
			opacity 0
			
		.button
			opacity 0
			margin-top -5px

.wrapper-step-one
	.list-icon-cultivo
		li
			opacity 0
.wrapper-step-two
	.list-image-cultivo
		li
			opacity 0
		.animate-1
			margin-top 0
			animation animated 4s ease inifinite alternate
			-webkit-animation animated 4s linear infinite;
			
		.animate-2
			margin-top 0
			animation animated 3s ease inifinite alternate
			-webkit-animation animated 3s linear infinite;
		.animate-3
			margin-top 0
			animation animated 2s ease inifinite alternate
			-webkit-animation animated 2s linear infinite;
		
		.animate-4
			margin-top 0
			animation animated 3.5s ease inifinite alternate
			-webkit-animation animated 3.5s linear infinite;	

.wrapper-step-three
	.list-fertilizantes
		li
			opacity 0
			
@keyframes animated {
    0%{margin-top: 0px}
    50% {margin-top: 4px}
    100% {margin-top: 0px}
    
}
